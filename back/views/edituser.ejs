    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
    <style>
    .form{
        margin: 5%;
    }
    </style>
    <title>Hello, world!</title>
  </head>
  <body>
    <div>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Admin</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/products">Home</a>
                    </li>
                </ul>
                </div>
            </div>
        </nav>
    </div>
    <div class="form" >
        <form action="" method="post">
          <div class="form-group">
            <label for="exampleInpuId">Id</label>
            <input type="text"  class="form-control"  readonly="readonly" id="id"  value="<%= data[0] %>">
          </div>
          <div class="form-group">
            <label for="exampleInputName">Nombre</label>
            <input type="text" class="form-control" id="name" placeholder="Nombre">
          </div>
        <div class="form-group">
          <label for="exampleInputPassword">Password</label>
          <input type="text" class="form-control" id="password" placeholder="Password">
        </div>
        <br>
        <button type="button" onclick="editarUsuario()"  class="btn btn-success">Guardar</button>
        <a href="/customers" class="btn btn-dark" >Regresar</a>
      </form>
    </div>

    <script>
        async function editarUsuario(){
        let id = document.getElementById("id").value;
        let password = document.getElementById("password").value;
        let name = document.getElementById("name").value;
        let User = {
            id: id,
            password: password,
            name: name,
        }
        
        let res = await fetch('http://localhost:3000/costumer/update', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify(User)
        });
        alert("El usuario fue modificado con exito!")

    }
    </script>

    </body>
 </html>