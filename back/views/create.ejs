    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
    <style>
    .form{
        margin: 5%;
    }
    </style>
    <title>Hello, world!</title>
  </head>
  <body>
    <div>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">customer</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/products">Home</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link" href="#">Link</a>
                    </li>
                </ul>
                </div>
            </div>
        </nav>
    </div>
    <div class="form" >
        <form action="" method="post">
        <div class="form-group">
          <label for="exampleInputNombre">Nombre/Descripcion</label>
          <input type="text" class="form-control" id="name" placeholder="Nombre">
        </div>
        <div class="form-group">
          <label for="exampleInpuPrice">Precio</label>
          <input type="text" class="form-control" id="price" placeholder="Precio">
        </div>
        <div class="form-group">
            <label for="exampleInpuImage">Imagen (URL)</label>
            <input type="url" class="form-control" id="image" placeholder="Image">
        </div>
        <div class="form-group">
            <label for="exampleInpuCategory">Categoria</label>
            <br>
            <select id="category" class="form-select" aria-label="Default select example">
                <option selected>Seleccionar</option>
                <option value="1">Tuning</option>
                <option value="2">Acc. para Motos y Cuatrimotos</option>
                <option value="3">Accesorios de Auto y Camioneta</option>
                <option value="4">Accesorios para Camiones</option>
                <option value="5">Audio para Vehículos</option>
                <option value="6">Cuidado Automotriz</option>
                <option value="7">GNV</option>
                <option value="8">Herramientas</option>
                <option value="9">Llantas</option>
                <option value="10">Navegadores GPS</option>
                <option value="11">Performance</option>
                <option value="12">Refacciones Autos y Camionetas</option>
                <option value="13">Refacciones de Línea Pesada</option>
                <option value="14">Refacciones para Motos</option>
                <option value="15">Rines</option>
                <option value="16">Seguridad Vehicular</option>
                <option value="17">Service Programado</option>
                <option value="18">Tags para el Pago de Peajes</option>
              </select>
        </div>
        <br>
        <button type="button" onclick="agregarProducto()" class="btn btn-success">Guardar</button>
        <a href="/products" class="btn btn-dark" >Regresar</a>
      </form>
    </div>

    <script>
        async function agregarProducto(){
        let name = document.getElementById("name").value;
        let precio = document.getElementById("price").value;
        let image = document.getElementById("image").value;
        let selected = document.getElementById("category")
        var category = selected.options[selected.selectedIndex].text;
        let price = Number.parseFloat(precio)
        console.log(name)
        console.log(price)
        console.log(image)
        console.log(category)
        let Articulo = {
            name: name,
            price: price,
            image: image,
            category: category
        }
        
        let res = await fetch('http://localhost:3000/products/update', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify(Articulo)
        });
        alert(res)

    }
    </script>

    </body>
